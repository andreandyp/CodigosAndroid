<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff888888">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/pantalla"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff22ff2e" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/btn9"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/pantalla"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickbtn"
        android:background="#ff2d7cff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/btn8"
        android:layout_alignTop="@+id/btn9"
        android:layout_centerHorizontal="true"
        android:onClick="clickbtn"
        android:background="#ff2d7cff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_alignTop="@+id/btn8"
        android:layout_alignRight="@+id/pantalla"
        android:layout_alignEnd="@+id/pantalla"
        android:onClick="clickbtn"
        android:background="#ff2d7cff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/btn6"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickbtn"
        android:background="#ff2d7cff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/btn5"
        android:layout_alignBottom="@+id/btn6"
        android:layout_alignRight="@+id/btn8"
        android:layout_alignEnd="@+id/btn8"
        android:onClick="clickbtn"
        android:background="#ff2d7cff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/btn4"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignRight="@+id/btn7"
        android:layout_alignEnd="@+id/btn7"
        android:onClick="clickbtn"
        android:background="#ff2d7cff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/btn3"
        android:layout_below="@+id/btn6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:onClick="clickbtn"
        android:background="#ff2d7cff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/btn2"
        android:layout_alignBottom="@+id/btn3"
        android:layout_alignRight="@+id/btn5"
        android:layout_alignEnd="@+id/btn5"
        android:onClick="clickbtn"
        android:background="#ff2d7cff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/btn1"
        android:layout_alignBottom="@+id/btn2"
        android:layout_alignRight="@+id/btn4"
        android:layout_alignEnd="@+id/btn4"
        android:onClick="clickbtn"
        android:background="#ff2d7cff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="borrar"
        android:id="@+id/borrar"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="borrar"
        android:background="#ff84fff5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/btn0"
        android:layout_alignBottom="@+id/borrar"
        android:layout_alignRight="@+id/btn2"
        android:layout_alignEnd="@+id/btn2"
        android:onClick="clickbtn"
        android:background="#ff2d7cff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/igual"
        android:layout_alignBottom="@+id/btn0"
        android:layout_alignRight="@+id/btn1"
        android:layout_alignEnd="@+id/btn1"
        android:onClick="result"
        android:background="#ff84fff5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/suma"
        android:layout_below="@+id/borrar"
        android:layout_alignRight="@+id/borrar"
        android:layout_alignEnd="@+id/borrar"
        android:layout_marginTop="15dp"
        android:onClick="operador"
        android:background="#ff16bdff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/resta"
        android:layout_alignBottom="@+id/suma"
        android:layout_centerHorizontal="true"
        android:onClick="operador"
        android:background="#ff16bdff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:id="@+id/residuo"
        android:layout_alignBottom="@+id/resta"
        android:layout_alignRight="@+id/igual"
        android:layout_alignEnd="@+id/igual"
        android:onClick="operador"
        android:background="#ff16bdff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:id="@+id/factor"
        android:layout_below="@+id/suma"
        android:layout_alignRight="@+id/suma"
        android:layout_alignEnd="@+id/suma"
        android:layout_marginTop="15dp"
        android:onClick="operador"
        android:background="#ff16bdff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/division"
        android:layout_alignBottom="@+id/factor"
        android:layout_centerHorizontal="true"
        android:onClick="operador"
        android:background="#ff16bdff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x^n"
        android:id="@+id/potencia"
        android:layout_alignBottom="@+id/division"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="operador"
        android:background="#ff16bdff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="raiz"
        android:id="@+id/raiz"
        android:layout_below="@+id/division"
        android:layout_alignLeft="@+id/division"
        android:layout_alignStart="@+id/division"
        android:layout_marginTop="15dp"
        android:onClick="operador"
        android:background="#ff16bdff" />

</RelativeLayout>
