<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".P5Intencion">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Escoge una acciÃ³n"
        android:id="@+id/texto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir pagina web"
        android:id="@+id/web"
        android:layout_below="@+id/texto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:background="#ff46a2ff"
        android:onClick="boton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Llamar"
        android:id="@+id/llamar"
        android:layout_alignBottom="@+id/web"
        android:layout_alignRight="@+id/texto"
        android:layout_alignEnd="@+id/texto"
        android:background="#ff46a2ff"
        android:onClick="boton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Google Maps"
        android:id="@+id/gmaps"
        android:layout_below="@+id/web"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:background="#ff46a2ff"
        android:onClick="boton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomar foto"
        android:id="@+id/foto"
        android:layout_alignBottom="@+id/gmaps"
        android:layout_alignRight="@+id/llamar"
        android:layout_alignEnd="@+id/llamar"
        android:background="#ff46a2ff"
        android:onClick="boton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar correo electronico"
        android:id="@+id/correo"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/gmaps"
        android:layout_centerHorizontal="true"
        android:background="#ff46a2ff"
        android:onClick="boton" />
</RelativeLayout>
